@model IEnumerable<PedidosProvidedHostedMVCAppWeb.Models.Pedidos>

@{
    ViewBag.Title = "ListaPedidos";
}

<h2>ListaPedidos</h2>

<p>
    @Html.ActionLink("Crear Pedido", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unidades)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unidades)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
       
    </tr>
}

</table>
